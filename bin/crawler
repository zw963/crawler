#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

keywords_file = File.expand_path('../../config/keywords.txt', __FILE__)
current_directory = File.expand_path('..', __FILE__)

File.foreach(keywords_file).map(&:chomp).reject {|x| x.empty? }.each do |keyword|
  ENV['CRAWLER_KEYWORD'] = keyword
  system "#{current_directory}/get_product_list"
  system "#{current_directory}/download_product_detail"
  system "#{current_directory}/get_product_detail"
  system "#{current_directory}/image_downloader"
end
