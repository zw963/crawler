#!/usr/bin/env ruby

def capture
  Dir["#{home_directory}/#{site}/*.csv"].each do |file|
    $keyword = File.basename(file, '.csv')
    image_count = 0

    logger.info "正在打开 #{$keyword} 图片页面."

    list = CSV.read(file).each do |csv_array|
      sku = csv_array[0]
      name = csv_array[1]
      image_url = csv_array[3]

      image_csv_filename = "#{home_directory}/#{site}/#{$keyword}/#{sku}/images.csv"

      if test 's', image_csv_filename
        logger_with_puts "跳过 #{name} 图片抓取 !"
        next
      end

      logger.info "创建 #{image_csv_filename}"
      logger.info "正在打开 #{image_url}"
      begin
        image_csv_file = CSV.open(image_csv_filename, "wb")
        browser.reset!
        browser.goto image_url

        count = 0
        browser.ul(class: 'list-h').lis.each.with_index do |li, i|
          li.click
          image_csv_file << [browser.div(id: 'biger').img.src]
          image_count += 1
          count += 1
          logger.info "插入第 #{count} 张图片 url."
        end
        logger_with_puts "#{label(name)} 抓取完成."
      rescue Watir::Exception::UnknownObjectException, Net::ReadTimeout
        logger.info "尝试重新打开 #{image_url}"
        retry
      ensure
        logger.info "正在关闭 #{image_csv_file.path}"
        image_csv_file.close
      end
    end
    logger_with_puts "抓取图片数量: #{image_count}"
  end
ensure
  browser.close unless @browser.nil?
end

unless ARGV.empty?
  logger_with_puts logger_with_puts "必须首先使用 \033[0;33m./get_jd_product_list\033[0m 生成抓取列表."
  exit 1
end

require_relative '../lib/common'
include Common

capture
