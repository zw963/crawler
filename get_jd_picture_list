#!/usr/bin/env ruby

def capture
  Dir["./#{site}/*.csv"].each do |file|
    self.keyword = File.basename(file, '.csv')
    picture_count = 0

    logger.info "正在打开 #{keyword} 图片页面."

    list = CSV.read(file).each do |csv_array|
      sku = csv_array[0]
      name = csv_array[1]
      picture_url = csv_array[3]

      picture_csv_filename = "./#{site}/#{keyword}/#{sku}/pictures.csv"

      if test 's', picture_csv_filename
        logger_with_puts "跳过 #{name} 图片抓取 !"
        next
      end

      logger.info "创建 #{picture_csv_filename}"
      logger.info "正在打开 #{picture_url}"
      begin
        picture_csv_file = CSV.open(picture_csv_filename, "wb")
        browser.reset!
        browser.goto picture_url

        count = 0
        browser.ul(class: 'list-h').lis.each.with_index do |li, i|
          li.click
          picture_csv_file << [browser.div(id: 'biger').img.src]
          picture_count += 1
          count += 1
          logger.info "插入第 #{count} 张图片 url."
        end
        logger_with_puts "#{label(name)} 抓取完成."
      rescue Watir::Exception::UnknownObjectException, Net::ReadTimeout
        logger.info "尝试重新打开 #{picture_url}"
        retry
      ensure
        logger.info "正在关闭 #{picture_csv_file.path}"
        picture_csv_file.close
      end
    end
    logger_with_puts "抓取图片数量: #{picture_count}"
  end
ensure
  logger_with_puts '正在关闭浏览器'
  browser.close unless @browser.nil?
end

unless ARGV.empty?
  logger_with_puts logger_with_puts "必须首先使用 \033[0;33m./get_jd_product_list\033[0m 生成抓取列表."
  exit 1
end

require_relative 'common'
include Common

capture
